@model Requirement_Management.Models.LoginView

@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h2 class="text-center mt-5">Login</h2>
    <hr class="col-sm-4 mx-auto" />
    <div class="form-horizontal col-sm-4 mx-auto  mb-3">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger mx-0 py-2 px-2">
                <strong>Error!</strong> @ViewBag.Message
            </div>
        }
        <div class="d-flex flex-column col-sm-11 m-2 mb-4">
            <div class="form-group">
                <label class="control-label w-100" for="UserName"><b>Username:</b></label>
                <div class="w-100">
                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label w-100" for="Password"><b>Password:</b></label>
                <div class="w-100">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            @*<div class="form-group">
                <label class="control-label w-100" for="RememberMe"><b>Remember Me:</b></label>
                <div class="w-100">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.RememberMe)
                        @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>*@

            <div class="form-group my-3">
                <div class="w-100">
                    <input type="submit" value="Log In" class="btn btn-success w-100" />
                </div>
            </div>

        </div>
    </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>