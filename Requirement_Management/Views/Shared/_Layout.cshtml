<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Requirement Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://kit.fontawesome.com/67380cbcac.js" crossorigin="anonymous"></script>
    <style>
        .nav-link{
            color: white!important;
        }
        .nav-link:hover{
            background-color: white;
            color: black!important;
        }
    </style>
</head> 
<body class="pt-0" style="padding-top:0;">
    <div class="navbar navbar-expand-lg bg-dark mb-4 p-0" @*style="background-color: #00bcd4;"*@>
        @Html.ActionLink("Requirement Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand p-0 pl-4 text-white", @style = "font-size: 20px; font-family:'Bebas Neue';" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
            @if (User.IsInRole("systemadmin, admin, normal user"))
            {
                <ul class="navbar-nav " style="font-size:.9rem;">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle p-3" href="#" id="navbardrop" data-toggle="dropdown">
                            Setups
                        </a>
                        <div class="dropdown-menu">
                            @if (User.IsInRole("systemadmin, admin"))
                            {
                                @Html.ActionLink("User", "Index", "Users", new { area = "" }, new { @class = "dropdown-item" })
                            }
                            @Html.ActionLink("Company", "Index", "ClientCompanies", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Module Category", "Index", "SoftwareCategories", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Module", "Index", "Softwares", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Project", "Index", "Projects", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Developer", "Index", "JobHolder", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Requirement Provider", "Index", "RequirementProviders", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Requirement Type", "Index", "RequirementTypes", new { area = "" }, new { @class = "dropdown-item" })
                        </div>
                    </li>
                
                    <li class="nav-item">@Html.ActionLink("Requirement", "Index", "Requirements", new { area = "" }, new { @class = "nav-link p-3" })</li>
                    @if (User.IsInRole("systemadmin, admin"))
                    {
                        <li class="nav-item">@Html.ActionLink("Manage", "DetailsReports", "Requirements", new { area = "" }, new { @class = "nav-link p-3" })</li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle p-3" href="#" id="navbardrop" data-toggle="dropdown">
                            Reports
                        </a>
                        <div class="dropdown-menu">
                            @Html.ActionLink("Project Lists", "ListReport", "Reports", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Project Status Report", "StatusReport", "Reports", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Developerwise Report", "DeveloperwiseReport", "Reports", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Requirement Report", "RequirementReport", "Reports", new { area = "" }, new { @class = "dropdown-item" })
                            @Html.ActionLink("Statuswise Requirement Report", "StatuswiseRequirementReport", "Reports", new { area = "" }, new { @class = "dropdown-item" })
                        </div>
                    </li>
                </ul>
            }
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="text-center d-print-none">
            <p style="font-family: none;">Copyright &copy; @DateTime.Now.Year by C&E IT Solutions</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
