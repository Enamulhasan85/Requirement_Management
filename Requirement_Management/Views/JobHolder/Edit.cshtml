@model Requirement_Management.Models.JobHolder

@{
    ViewBag.Title = "Edit";
}
<div class="mx-auto p-0 col-lg-8 card my-5 bg-light" @*style="position: absolute; left: 0; right: 0;top: 20%; bottom: 24.4%;"*@>
    <div class="card-header bg-dark text-white p-2">
        <h4 class="text-center mx-auto my-0">Edit Job Holder</h4>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="p-3">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                <div class="form-group col-5 ml-5">
                    <label class="control-label w-100" for="Name"><b>Name:</b></label>
                    <div class="w-100">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-5 ml-5">
                    <label class="control-label w-100" for="Contact"><b>Contact:</b></label>
                    <div class="w-100">
                        @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-5 ml-5">
                    <label class="control-label w-100" for="Email"><b>Email:</b></label>
                    <div class="w-100">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-5 ml-5">
                    <label class="control-label w-100" for="Address"><b>Address:</b></label>
                    <div class="w-100">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-5 ml-5">
                    <label class="control-label w-100" for="Designation"><b>Designation:</b></label>
                    <div class="w-100">
                        @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-5 ml-5">
                    <label class="control-label w-100" for="JoiningDate"><b>Joining Date:</b></label>
                    <div class="w-100">
                        <input value="@Model.JoiningDate.Value.ToString("yyyy-MM-dd")" class="form-control text-box single-line" data-val="true" data-val-date="The field JoiningDate must be a date." id="Joining" name="JoiningDate" type="date">
                        @Html.ValidationMessageFor(model => model.JoiningDate, " ", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-5 ml-5">
                    <label class="control-label w-100" for="HourlyCost"><b>Hourly Cost:</b></label>
                    <div class="w-100">
                        @Html.EditorFor(model => model.HourlyCost, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HourlyCost, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-5 ml-5 d-flex align-items-end">
                    <label class="control-label mr-2 m-0 mb-2" for="isActive"><b>isActive:  </b></label>
                    <div class="w-75">
                        <div class="checkbox mb-1">
                            @Html.EditorFor(model => model.isActive, new { htmlAttributes = new { @style = "width:18px; height:18px;" } })
                            @Html.ValidationMessageFor(model => model.isActive, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group d-flex my-4">
                <div class="d-inline-block mx-auto">
                    <input type="submit" value="Save" class="btn btn-success" />
                    @Html.ActionLink("Back to List", "Index", new { @area = "" }, new { @class = "btn btn-info" })
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
<script>
 

</script>
}